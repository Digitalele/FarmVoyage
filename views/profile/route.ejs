<div class="container-fluid profile">
  <div class="row">
    <div class="col-sm-12">
      <h1>Profile</h1>
    </div>
  </div>
  <div class="row profile-headers">
    <div class="col-xs-4">
      <h2 class="active">Routes</h2>
    </div>
    <div class="col-xs-4">
      <a href="/profile/farm"><h2>Farms</h2></a>
    </div>
    <div class="col-xs-4">
      <a href="/profile/account"><h2>Account</h2></a>
    </div>
  </div>
  <div class="row profile-content">
    <div class="col-sm-12">
      <% if (routes.length > 0) { %>
        <% routes.forEach(function(route, i) { %>

            <div class="route-card">
              <h3><%= route.route %></h3>
              <p class="created hidden">Created: </p>
              <p><span>Country: </span><%= route.country %></p>
              <p><span>Start: </span><%= route.from %></p>
              <p><span>Destination: </span><%= route.to %></p>
              <p><span>Category: </span><%= route.type %></p>
              <p><span>Type: </span><%= route.route.keyword %></p>
              <p><span>Product: </span><%= route.name %></p>
              <button>See on Map</button>
            </div>

        <% }) %>
        <% } else { %>
        <div class="">
          <p><%= user.username %> doesn't have routes yet.</p>
        </div>
      <% } %>


  </div>
</div>
