<div class="container-fluid main">
  <div class="row">
    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 main-content">
      <form action="" class="search-filters">
      <select class="form-control" id="country">
          <option value="" disabled selected hidden>country</option>
          <option id="italy-select" value="italy">Italy</option>
          <option id="spain-select" value="spain">Spain</option>
          <option id="france-select" value="france">France</option>
        </select>
        <input type="text" name="starting" placeholder="starting point" class="form-control">
        <input type="text" name="destination" placeholder="destination" class="form-control">
        <input type="number" name="search-radius" class="form-control radius"><span>km from route</span>
        <select class="form-control" id="type">
          <option value="" disabled selected hidden>type</option>
          <option class="italy-op">Sample 1 IT</option>
          <option class="italy-op">Sample 2 IT</option>
          <option class="italy-op">Sample 3 IT</option>
          <option class="spain-op">Sample 1 ES</option>
          <option class="spain-op">Sample 2 ES</option>
          <option class="spain-op">Sample 3 ES</option>
          <option class="france-op">Sample 1 FR</option>
          <option class="france-op">Sample 2 FR</option>
          <option class="france-op">Sample 3 FR</option>
        </select>
        <select class="form-control" id="keyword">
          <option value="" disabled selected hidden>keyword</option>
          <option class="italy-op">Sample 1 IT</option>
          <option class="italy-op">Sample 2 IT</option>
          <option class="italy-op">Sample 3 IT</option>
          <option class="spain-op">Sample 1 ES</option>
          <option class="spain-op">Sample 2 ES</option>
          <option class="spain-op">Sample 3 ES</option>
          <option class="france-op">Sample 1 FR</option>
          <option class="france-op">Sample 2 FR</option>
          <option class="france-op">Sample 3 FR</option>
        </select>
        <button type="submit">Search</button>
      </form>

      <% if (userSignedIn) { %>
      <div class="save-route">
        <form action="">
          <input type="text" name="name" placeholder="route name" id="route-name">
          <button type="submit">Save Route</button>
        </form>
      <% } else { %>
        <div class="save-route">
            <p id="signin-route">Sign in to Save Route</p>
            <button type="submit" id="disabled"><a href="/login">Save Route</a></button>
      <% } %>

      </div>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 main-content">
      <div id="map"></div>
    </div>
  </div>
</div>
